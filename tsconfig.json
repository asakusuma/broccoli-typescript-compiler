{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**.ts"
  ]
}
