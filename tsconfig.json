{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "outDir": "tmp",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "declarationDir": "dist"
  },
  "include": [
    "lib/**/*.ts",
    "tests/*-test.ts"
  ],
  "files": [
    "lib/index.ts"
  ]
}
