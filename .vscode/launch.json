{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": [
        "--no-timeouts",
        "${workspaceRoot}/dist/tests/"
      ],
      "runtimeArgs": [
        "--no-lazy"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/dist/**/*.js"
      ]
    }
  ]
}
